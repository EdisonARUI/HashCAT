{
  "rules": [
    {
      "pattern": "**/*.move",
      "language": "move",
      "autoformat": true,
      "lint": true,
      "formatter": "move-analyzer"
    },
    {
      "pattern": "**/*.{ts,tsx}",
      "language": "typescript",
      "autoformat": true,
      "lint": true,
      "formatter": "prettier"
    },
    {
      "pattern": "**/*.{js,jsx}",
      "language": "javascript",
      "autoformat": true,
      "lint": true,
      "formatter": "prettier"
    },
    {
      "pattern": "**/*.css",
      "language": "css",
      "autoformat": true,
      "formatter": "prettier"
    },
    {
      "pattern": "**/*.json",
      "language": "json",
      "autoformat": true,
      "formatter": "prettier"
    },
    {
      "pattern": "**/*.md",
      "language": "markdown",
      "autoformat": true,
      "formatter": "prettier"
    }
  ],
  "search": {
    "exclude": [
      "**/node_modules/**",
      "**/dist/**",
      "**/build/**",
      "**/.sui/**",
      "**/target/**"
    ]
  },
  "editor": {
    "tabSize": 2,
    "insertSpaces": true,
    "trimTrailingWhitespace": true,
    "insertFinalNewline": true
  },
  "format": {
    "onSave": true
  }
} 